@page
@model frontend.Pages.auth.AuthPeriodModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>Richiesta Periodo Accesso</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>

<body class="center-container">
    <h3>Gestione del periodo di accesso</h3>

    <div class="center-content" style="text-align:left;">
        <h4 style="text-align:center;">Seleziona le date del periodo di accesso</h4>
        <hr style="margin-top: 0.5em; margin-bottom: 1em;">

        <label>
            Seleziona il periodo temporale (da / a) entro il quale desideri 
            effettuare le operazioni nel sistema. Una volta scaduto il termine dovrai 
            nuovamente fare richiesta all'azienda.
        </label>

        <form method="post" asp-page-handler="InviaRichiesta">
            <div class="form-group">
                <label>Data di inizio</label>
                <input type="date" class="form-control" name="dataInizio" placeholder="Data di inizio del periodo di accesso" required/>
            </div>
            <div class="form-group">
                <label>Data di fine</label>
                <input type="date" class="form-control" name="dataFine" placeholder="Data di fine del periodo di accesso" required />
            </div>

            <button type="submit" class="btn btn-primary">Invia richiesta di accesso</button>
        </form>
        
        @if (TempData.ContainsKey("Messaggio"))
        {
            <br />
            <div class="alert alert-info" role="alert">
                @TempData["Messaggio"]
            </div>
        }

        @if (TempData.ContainsKey("MessaggioErrore"))
        {
            <br />
            <div class="alert alert-danger" role="alert">
                @TempData["MessaggioErrore"]
            </div>
        }
    </div>
</body>


</html>
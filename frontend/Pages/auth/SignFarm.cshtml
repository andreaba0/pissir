@page
@model frontend.Pages.auth.SignFarmModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Registrazione Azienda Agricola</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

</head>

<body class="center-container">
    <h3>Registra la tua Azienda Agricola</h3>

    <div class="center-content" style="text-align:left;">

        <form method="post" asp-page-handler="RegistraAzienda">
            <div class="form-group">
                <label>Partita IVA</label>
                <input type="text" class="form-control" name="PartitaIva" placeholder="Partita Iva dell'azienda" value="@TempData["PartitaIva"]" required @((TempData.ContainsKey("Messaggio")) ? "disabled" : "") />
            </div>
            <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" name="Nome" placeholder="Nome dell'azienda" value="@TempData["Nome"]" required @((TempData.ContainsKey("Messaggio")) ? "disabled" : "") />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Indirizzo</label>
                        <input type="text" class="form-control" name="Indirizzo" placeholder="Indirizzo della sede aziendale" value="@TempData["Indirizzo"]" required @((TempData.ContainsKey("Messaggio")) ? "disabled" : "") />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Telefono" placeholder="Contatto telefonico aziendale" value="@TempData["Telefono"]" required @((TempData.ContainsKey("Messaggio")) ? "disabled" : "") />
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="Email aziendale" value="@TempData["Email"]" required @((TempData.ContainsKey("Messaggio")) ? "disabled" : "") />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tipo di Azienda</label>
                        @if (TempData["TipoAzienda"] != null)
                        {
                            <input type="text" class="form-control" name="TipoAzienda" value=@if(TempData["TipoAzienda"] == "WSP")
                               {
                        <text>"Idrica"</text>
                        }
                        else
                        {
                        <text>"Agricola"</text>
                        }
                            readonly />
                        }
                        else
                        {
                            <select class="form-control" name="TipoAzienda" required>
                                <option value="WSP">Idrica</option>
                                <option value="FAR">Agricola</option>
                            </select>
                        }
                    </div>
                </div>
            </div>
            
            

            <button type="submit" class="btn btn-primary" @((TempData.ContainsKey("Messaggio")) ? "disabled" : "")>Richiedi registrazione</button>
        </form>

        @if (TempData.ContainsKey("Messaggio"))
        {
            <br />
            <div class="alert alert-info" role="alert">
                @TempData["Messaggio"]
            </div>
        }

        @if (TempData.ContainsKey("MessaggioErrore"))
        {
            <br />
            <div class="alert alert-danger" role="alert">
                @TempData["MessaggioErrore"]
            </div>
        }
    </div>
</body>


</html>

@page
@model SignInModel

@{
    Layout = null;

    string[,] providers = new string[,] {
        {
        "Google",
        "fa-google"
        },

        {
        "Facebook",
        "fa-facebook"        
        }

    };
}

<!DOCTYPE html>
<html>

<head>
    <title>Registrazione Utente</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    <script src="https://kit.fontawesome.com/49ec009d21.js" crossorigin="anonymous"></script>
</head>

<body class="center-container">

    <h3>Accedi/Registrati al Servizio Idrico </h3>

    <div class="center-content">

        <h4>Scegli un provider</h4>
        <hr style="margin-top: 0.5em; margin-bottom: 1.5em;">

        <div class="row justify-content-center">
            @for (var i = 0; i < providers.GetLength(0); i++)
            {
                <a class="link-login" style="text-decoration:none;" href="@Url.Page("SignIn", new { provider = providers[i, 0] })">
                    <div class="provider-box">
                        <div>
                            <i class="fa-brands fa-lg @providers[i, 1]"></i>
                            <br />
                            Accedi con<br /> @providers[i, 0]
                        </div>
                    </div>
                </a>
            }
        </div>


        <br />
        <p>
            <b>NOTA:</b> I provider non possono essere scambiati; utilizzarne uno diverso implica la creazione di un nuovo account.
            Se sei gi&agrave; registrato, accedi con lo stesso provider.
        </p>
        @if (TempData.ContainsKey("MessaggioErrore"))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MessaggioErrore"]
            </div>
        }
    </div>
    
</body>



</html>
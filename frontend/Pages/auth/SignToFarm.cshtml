@page
@model frontend.Pages.auth.SignToFarmModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Richiesta Adesione Azienda</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />


</head>

<body class="center-container">
    <h3>Richiesta d'adesione all'azienda</h3>

    <div class="center-content">
        <h4>Benvenuto nel Sistema Idrico</h4>
        <hr style="margin-top: 0.5em; margin-bottom: 1em;">

        <p>Ecco alcuni dei tuoi dati:</p>
        
        <strong>Nome:</strong> @Model.NomeUtente <br />
        <strong>Cognome:</strong> @Model.CognomeUtente <br />
        <strong>Codice Fiscale:</strong> @Model.CodiceFiscale <br /><br />  
        
        <label>Inserisci la Partita IVA dell'azienda in cui lavorerai:</label>
        <form method="post" asp-page-handler="Iscriviti" class="form-inline w-100">
            <input type="hidden" id="codiceFiscale" name="codiceFiscale" value="@Model.CodiceFiscale" readonly/>
            <input type="text" class="form-control ml-4 mr-1 col-8" name="partitaIva" placeholder="Partita Iva" required />
            <button type="submit" class="btn btn-primary col" id="iscrivitiButton">Invia richiesta</button>
        </form>
        <br />
        Oppure <br />
        <a class="link-login" href="/auth/SignFarm">Crea una nuova azienda</a>
        <br /><br />
        @if (TempData.ContainsKey("Messaggio"))
        {
            <div class="alert alert-info" role="alert">
                @TempData["Messaggio"]
            </div>
        }

        @if (TempData.ContainsKey("MessaggioErrore"))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MessaggioErrore"]
            </div>
        }
    </div>
</body>

</html>
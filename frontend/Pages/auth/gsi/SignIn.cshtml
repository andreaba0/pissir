@page

@{
    Layout = null;

    string[,] providers = new string[,] {
{"Google", "fa-google", "https://accounts.google.com/o/oauth2/auth"},
{"Facebook", "fa-facebook", "https://www.facebook.com/v12.0/dialog/oauth"},
{"Github", "fa-github", "https://github.com/login/oauth/authorize"}
};
}
<!DOCTYPE html>
<html>

<head>
    <title>Signin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/app.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/frontend.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/49ec009d21.js" crossorigin="anonymous"></script>
    <style type="text/css">
        a {
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
        }
    </style>
</head>

<body class="bg-slate-100">
    <div class="w-screen flex flex-col items-center justify-center">
        <div class="w-full flex items-center justify-center py-9 max-w-xl font-thin text-3xl text-gray-800">
            Gestione servizio idrico
        </div>
        <div class="flex w-full flex-col max-w-3xl items-center justify-center bg-white py-6 space-y-8">
            <div class="font-medium text-4xl text-gray-800">
                Scegli un provider per accedere
            </div>
            @for (var i = 0; i < providers.GetLength(0); i++)
            {
                <a class="block w-72 h-14" href="@providers[i, 2]">
                    <div
                        class="flex w-full h-full text-gray-800 border-gray-600 cursor-pointer rounded-md border-[1px] font-medium">
                        <div class="w-14 h-full flex items-center justify-center">
                            <i class="fa-brands fa-lg @providers[i, 1]"></i>
                        </div>
                        <div class="w-full flex items-center justify-center flex-grow text-center">
                            Accedi con @providers[i, 0]
                        </div>
                    </div>
                </a>
            }
            <div class="w-full max-w-sm text-sm font-medium text-gray-800 text-center">
                I provider non sono intercambiabili<br />
                Accedere con un provider diverso comporter&agrave; la creazione di un nuovo account<br />
                Se si &egrave; gi&agrave; registrati, accedere con lo stesso provider
            </div>
        </div>
    </div>
</body>

</html>